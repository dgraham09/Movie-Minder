<div class="d-flex flex-row justify-content-around">
  <ul class="mt-3">
    <% @lists.each do |list| %>
      <div class="d-flex flex-column align-items-center">
        <div class="card my-2 flex-row justify-content-around align-items-center">
          <% if list.photo.attached? %>
            <%= cl_image_tag list.photo.key, width: 200, height: 200, crop: :fill, class: "rounded p-3" %>
          <% else %>
            <p>You haven't uploaded an image</p>
          <% end %>
          <div class="d-flex flex-column flex-grow-1 align-items-end">
            <h3><%= list.name %></h3>
            <button class="btn btn-primary my-3"><%= link_to "See more", list_path(list), class: " text-decoration-none text-light"%></button>
            <button class="btn btn-danger text-decoration-none"><%= link_to "Delete", list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "text-decoration-none color text-light btn-lg" %></button>
          </div>
        </div>
        <% end %>
      </div>
<%= link_to "Add a new list", new_list_path, class: "btn btn-flat btn-success btn-lg" %>
  </ul>
    <div class="card mt-4 mx-5 d-flex flex-column justify-content-start">
      <div>
        <h1>Upcoming movies</h1>
      </div>
      <div class="d-flex justify-content-center">
      <ul>
        <% @upcoming_movies.each do |movie| %>
          <div class="futureCard">
            <%= image_tag "https://image.tmdb.org/t/p/w200/#{movie[:poster]}" %>
            <div class="mx-4">
              <p><%= movie[:title]%></p>
              <p>Release date: <%= movie[:date] %></p>
            </div>
          </div>
          <% end %>
      </ul>
      </div>
    </div>
</div>
